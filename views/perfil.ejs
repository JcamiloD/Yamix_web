<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    <link rel="stylesheet" href="../assets/css/profile.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container rounded bg-white mt-5">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" src="https://i.imgur.com/0eg0aG0.jpg" width="90">
                    <span class="font-weight-bold"><%= usuario.nombre %></span>
                    <span class="text-black-50"><%= usuario.apellido %></span>
                    <span class="text-black-50"><%= usuario.gmail %></span>
                </div>
            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <h6 class="text-right">Perfil</h6>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label>Nombre:</label>
                            <p><%= usuario.nombre %></p>
                        </div>
                        <div class="col-md-6">
                            <label>Apellido:</label>
                            <p><%= usuario.apellido %></p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label>Correo:</label>
                            <p><%= usuario.gmail %></p>
                        </div>
                        <div class="col-md-6">
                            <label>Fecha de Nacimiento:</label>
                            <p><%= usuario.fecha_nacimiento.split('T')[0] %></p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label>Clase:</label>
                            <p><%= usuario.nombre_clase ? usuario.nombre_clase : 'No asignada' %></p>
                        </div>
                    </div>
                    <div class="text-right mt-4">
                        <!-- Botón para abrir la modal de edición -->
                        <button class="btn btn-secondary" data-toggle="modal" data-target="#editProfileModal">Editar</button>
                        <a href="/" class="btn btn-secondary">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para editar perfil -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Editar Perfil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/perfil/actualizar" method="POST">
                        <input type="hidden" name="id_usuario" value="<%= usuario.id_usuario %>">
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label for="nombre">Nombre:</label>
                                <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="<%= usuario.nombre %>">
                            </div>
                            <div class="col-md-6">
                                <label for="apellido">Apellido:</label>
                                <input type="text" class="form-control" name="apellido" placeholder="Apellido" value="<%= usuario.apellido %>">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label for="correo">Correo:</label>
                                <input type="email" class="form-control" name="correo" placeholder="Correo" value="<%= usuario.gmail %>">
                            </div>
                            <div class="col-md-6">
                                <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
                                <input type="date" class="form-control" name="fecha_nacimiento" placeholder="Fecha de Nacimiento" value="<%= usuario.fecha_nacimiento.split('T')[0] %>">
                            </div>
                        </div>
                        <div class="text-right mt-4">
                            <button type="submit" class="btn btn-secondary">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <!-- Primero carga jQuery, luego Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
</body>
</html>
