    <body>

        <div class="wrapper">
            <header class="header-mobile">
                <h1 class="logo">Carrito</h1>
                <button class="open-menu" id="open-menu">
                    <i class="bi bi-list"></i>
                </button>
            </header>
            <aside>
                <button class="close-menu" id="close-menu">
                    <i class="bi bi-x"></i>
                </button>
                <header>
                    <h1 class="logo">CATALOGO</h1>
                </header>
                <nav>
                    <ul class="menu">
                        <li>
                            <a href="/cata" class="botonn">Ir al CRUD</a>
                        </li>
                        <li>
                        
                        </li>
                    </ul>
                </nav>

                <footer>
        
                </footer>
            </aside>
            <main>
                <h2 class="titulo-principal" id="titulo-principal">Todos los productos</h2>
                <div id="contenedor-productos" class="contenedor-productos">
                    <script>
                        function mostrarProductos() {
                            let listaProductos = JSON.parse(localStorage.getItem('productos')) || [];
                            let mostrador = document.getElementById("contenedor-productos");
                            mostrador.innerHTML = "";

                            listaProductos.forEach(function (producto) {
                                mostrador.innerHTML += `
                            <div>
                                <img class="producto-imagen" src="${producto.imagen}" > 
                                <div class="producto-detalles">
                                    <h3 class="producto-titulo">${producto.nombre}</h3>
                                    <h4 class="categoria">${producto.categoria}</h3>
                                    <p class="producto-precio">$${producto.precio}</p>
                                    <button class="producto-agregar"  id="${producto.id}">agregar</button>
                                </div>
                            </div>
                            `;
                            });
                            actualizarBotonesAgregar();
                        }
                        mostrarProductos()

                    </script>
                </div>
            </main>
        </div>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
        <script src="../assets/js/menu.js"></script>
    </body>


